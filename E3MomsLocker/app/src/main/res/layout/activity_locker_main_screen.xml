<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cc0"
    android:layout_row="0"
    android:layout_column="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.laize.e3momslocker.LockerMainScreenActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/temp_background"
        android:layout_alignParentStart="true" />

    <com.laize.e3momslocker.LockerScribbleView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#faa7a7"
        android:id="@+id/scribble_view"
        android:visibility="invisible"
        android:layout_gravity="right|top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.laize.e3momslocker.LockerPatternView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#00c"
        android:layout_gravity="right|bottom"
        android:id="@+id/pettern_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analog_clock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Go Canvas!!"
        android:id="@+id/mode_change_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/exit_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/mode_change_view"
        android:layout_toLeftOf="@+id/pettern_view"
        android:layout_toStartOf="@+id/pettern_view" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/clear_all_button"
        android:src="@android:drawable/ic_notification_clear_all"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/pettern_view"
        android:layout_toLeftOf="@+id/pettern_view"
        android:layout_toStartOf="@+id/pettern_view" />

</RelativeLayout>
